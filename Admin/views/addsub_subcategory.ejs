        <script>
          document.addEventListener('DOMContentLoaded', function () {
            const storeCheckboxes = document.querySelectorAll('.store-checkbox');
            storeCheckboxes.forEach(function (checkbox) {
              checkbox.addEventListener('change', function () {
                const selectedStoreIds = [];
                storeCheckboxes.forEach(function (cb) {
                  if (cb.checked) {
                    selectedStoreIds.push(cb.value);
                  }
                });

                if (selectedStoreIds.length > 0) {
                  $.ajax({
                    type: 'GET',
                    url: '/addsub_subcategory',
                    data: { storeIds: selectedStoreIds },
                    success: function (response) {
                      console.log('Response from server:', response);
                      updateCategories(response.categories, selectedStoreIds);
                      updateSubCategories(response.subcategories, selectedStoreIds);
                    },
                    error: function (xhr, status, error) {
                      console.error('Error sending request:', error);
                    }
                  });
                } else {

                  clearCategoriesAndSubCategories();
                }
              });
            });
          });

          function updateCategories(categories, selectedStoreIds) {
            selectedStoreIds.forEach(storeId => {
              const categoriesDiv = document.querySelector(`#categories${storeId}`);
              categoriesDiv.innerHTML = '';

              categories.forEach(category => {
                // console.log("strid:",storeId);
                // console.log("category:",category);
                // console.log("category.strid:",category.storeId);
                const storeIdsArray = category.storeId.split(',').map(id => id.trim()); // Split and trim the store IDs
                if (storeIdsArray.includes(storeId)) {
                  const input = document.createElement('input');
                  input.type = 'checkbox';
                  input.name = 'catId[]';
                  input.value = category.id;
                  input.id = `category${category.id}`;

                  const label = document.createElement('label');
                  label.htmlFor = `category${category.id}`;
                  label.textContent = category.Name;

                  const div = document.createElement('div');
                  div.className = 'form-check';
                  div.appendChild(input);
                  div.appendChild(label);

                  categoriesDiv.appendChild(div);
                }
              });
            });
          }

          function updateSubCategories(subcategories, selectedStoreIds) {
            selectedStoreIds.forEach(storeId => {
              const subcategoriesDiv = document.querySelector(`#subcategories${storeId}`);
              subcategoriesDiv.innerHTML = '';

              subcategories.forEach(subcategory => {
                const storeIdsArray = subcategory.storeId.split(',').map(id => id.trim()); // Split and trim the store IDs
                if (storeIdsArray.includes(storeId)) {
                  const input = document.createElement('input');
                  input.type = 'checkbox';
                  input.name = 'subcatId[]'; // Adjust if needed
                  input.value = subcategory.id;
                  input.id = `subcategory${subcategory.id}`;

                  const label = document.createElement('label');
                  label.htmlFor = `subcategory${subcategory.id}`;
                  label.textContent = subcategory.SubCatName; // Corrected field name

                  const div = document.createElement('div');
                  div.className = 'form-check';
                  div.appendChild(input);
                  div.appendChild(label);

                  subcategoriesDiv.appendChild(div);
                }
              });
            });
          }

          function clearCategoriesAndSubCategories() {
            const categoriesDiv = document.querySelectorAll('[id^=categories]');
            const subcategoriesDiv = document.querySelectorAll('[id^=subcategories]');
            categoriesDiv.forEach(div => div.innerHTML = '');
            subcategoriesDiv.forEach(div => div.innerHTML = '');
          }

          $(document).ready(function () {
            $('#addsub_subcategory').submit(function (event) {
              event.preventDefault();
              var formData = $(this).serialize();
              $.ajax({
                type: 'POST',
                url: '/addsub_subcategory',
                data: formData,
                success: function (response) {
                  $('#subcat').removeClass('error-box').addClass('success-box').text(response.message);
                  setTimeout(function () {
                    window.location.href = '/showsub_subcategory';
                  }, 2000);
                },
                error: function (xhr) {
                  $('#subcat').removeClass('success-box').addClass('error-box').text(xhr.responseJSON.error);
                }
              });
            });
          });
        </script>

