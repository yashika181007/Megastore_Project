        <script>
          document.addEventListener('DOMContentLoaded', function () {
            const storeCheckboxes = document.querySelectorAll('.store-checkbox');

            storeCheckboxes.forEach(function (checkbox) {
              checkbox.addEventListener('change', function () {
                const selectedStoreIds = [];
                storeCheckboxes.forEach(function (cb) {
                  if (cb.checked) {
                    selectedStoreIds.push(cb.value);
                  }
                });

                if (selectedStoreIds.length > 0) {
                  $.ajax({
                    type: 'GET',
                    url: '/addsubcategory',
                    data: { storeIds: selectedStoreIds },
                    success: function (response) {
                      console.log('Response from server:', response); // Debug log
                      updateCategories(response.categories, selectedStoreIds);
                    },
                    error: function (xhr, status, error) {
                      console.error('Error sending request:', error);
                    }
                  });
                } else {
                  // Clear all categories if no stores are selected
                  updateCategories([]);
                }
              });
            });
          });

          function updateCategories(categories, selectedStoreIds = []) {
            const categoriesDivs = document.querySelectorAll('[id^=categories]');

            // Clear all categories divs
            categoriesDivs.forEach(div => {
              div.innerHTML = '';
            });

            // Show and update the selected stores' categories
            selectedStoreIds.forEach(storeId => {
              const categoriesDiv = document.querySelector(`#categories${storeId}`);
              if (categoriesDiv) {
                categories.forEach(category => {
                  if (category.storeId.split(',').map(id => id.trim()).includes(storeId)) {
                    const input = document.createElement('input');
                    input.type = 'checkbox';
                    input.name = 'catId[]';
                    input.value = category.id;
                    input.id = `category${category.id}`;
                    const label = document.createElement('label');
                    label.htmlFor = `category${category.id}`;
                    label.textContent = category.Name;
                    const div = document.createElement('div');
                    div.className = 'form-check';
                    div.appendChild(input);
                    div.appendChild(label);
                    categoriesDiv.appendChild(div);
                  }
                });
              }
            });
          }

          $(document).ready(function () {
            $('#addsubcategory').submit(function (event) {
              event.preventDefault();
              var formData = $(this).serialize();
              $.ajax({
                type: 'POST',
                url: '/addsubcategory',
                data: formData,
                success: function (response) {
                  $('#subcat').removeClass('error-box').addClass('success-box').text(response.message);
                  setTimeout(function () {
                    window.location.href = '/showsubcategory';
                  }, 2000);
                },
                error: function (xhr) {
                  $('#subcat').removeClass('success-box').addClass('error-box').text(xhr.responseJSON.error);
                }
              });
            });
          });

        </script>
