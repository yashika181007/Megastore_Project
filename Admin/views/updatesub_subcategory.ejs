<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>Update Sub-sub_subcategory</title>
  <meta content="" name="description">
  <meta content="" name="keywords">
  <link href="assets/img/favicon.png" rel="icon">
  <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="assets/vendor/simple-datatables/style.css" rel="stylesheet">
  <link href="assets/css/style.css" rel="stylesheet">
  <style>
    .success-box {
      background-color: #dff0d8;
      border-color: #d6e9c6;
      color: #3c763d;
    }

    .error-box {
      background-color: #f8d7da;
      border-color: #f5c6cb;
      color: #721c24;
    }

    .message-box {
      padding: 10px;
      margin-top: 10px;
      border-radius: 5px;
    }
  </style>
</head>

<body>
  <%- include('./header.ejs') %>
    <%- include('./sidebar.ejs') %>
      <main id="main" class="main">
        <div class="pagetitle">
          <h1>Sub-sub_subcategory</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Update Sub-sub_subcategory</li>
            </ol>
          </nav>
        </div>
        <div>
        </div>
        <section class="section dashboard">
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <div id="sub_subcategory" class="message-box"></div>
                  <h5 class="card-title">Update Sub-sub_subcategory</h5>
                   <div id="sub_subcategory-data" data-sub_subcategory='<%- JSON.stringify(sub_subcategory[0]) %>'></div>
                  <% sub_subcategory.forEach(sub_subcategoryItem=> { %>
                    <form class="row g-3" action="/updatesub_subcategory?sub_subcategoryId=<%= sub_subcategory.id %>"
                      id="updatesub_subcategory" method="POST">

                      <input type="hidden" name="id" value="<%= sub_subcategoryItem.id %>">
                      <div class="col-12">
                        <label for="inputName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="inputName" name="Sub_SubCatName"
                          value="<%= sub_subcategoryItem.Sub_SubCatName %>">
                      </div>
                      <div class="col-12">
                        <label for="inputDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="inputDescription"
                          name="Sub_SubCatDescription"><%= sub_subcategoryItem.Sub_SubCatDescription %></textarea>
                      </div>
                      <div class="col-12">
                        <label for="inputPageTitle" class="form-label">Page Title</label>
                        <input type="text" class="form-control" id="inputPageTitle" name="Sub_SubCatPageTitle"
                          value="<%= sub_subcategoryItem.Sub_SubCatPageTitle %>">
                      </div>
                      <div class="col-12">
                        <label for="inputMetaKeywords" class="form-label">Meta Keywords</label>
                        <input type="text" class="form-control" id="inputMetaKeywords" name="Sub_SubCatMetaKeywords"
                          value="<%= sub_subcategoryItem.Sub_SubCatMetaKeywords %>">
                      </div>
                      <div class="col-12">
                        <label for="inputMetaDescription" class="form-label">Meta Description</label>
                        <textarea class="form-control" id="inputMetaDescription"
                          name="Sub_SubCatMetaDescription"><%= sub_subcategoryItem.Sub_SubCatMetaDescription %></textarea>
                      </div>
                      <div class="col-12">
                        <label for="stores" class="form-label">Stores:</label>
                        <% stores.forEach((store, index) => { %>
                          <div class="form-check">
                            <input class="form-check-input store-checkbox" type="checkbox" name="storeId[]" value="<%= store.id %>" <% if (sub_subcategoryItem.storeId.split(',').includes(String(store.id))) { %> checked <% } %> id="store<%= index %>">
                            <label class="form-check-label" for="store<%= index %>">
                              <%= store.store_name %>
                            </label>
                            <div class="col-12" id="categories<%= store.id %>"></div>
                            <div class="col-12 subcat" id="sub_subcategory<%= store.id %>"></div>
                          </div>
                        <% }); %>
                      </div>

                  
                      <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                      </div>

                    </form>
                    <% }); %>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main><!-- End #main -->
      <!-- ======= Footer ======= -->
      <%- include('./footer.ejs') %>
        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>
        <!-- Vendor JS Files -->
        <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="assets/vendor/chart.js/chart.umd.js"></script>
        <script src="assets/vendor/echarts/echarts.min.js"></script>
        <script src="assets/vendor/quill/quill.min.js"></script>
        <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="assets/vendor/tinymce/tinymce.min.js"></script>
        <script src="assets/vendor/php-email-form/validate.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
          document.addEventListener('DOMContentLoaded', function () {
              const storeCheckboxes = document.querySelectorAll('.store-checkbox');
      
              storeCheckboxes.forEach(function (checkbox) {
                  checkbox.addEventListener('change', function () {
                      const selectedStoreIds = [];
                      storeCheckboxes.forEach(function (cb) {
                          if (cb.checked) {
                              selectedStoreIds.push(cb.value);
                          }
                      });
      
                      if (selectedStoreIds.length > 0) {
                          console.log('Selected Store IDs:', selectedStoreIds);
                          $.ajax({
                              type: 'GET',
                              url: '/addsub_subcategory',
                              data: { storeIds: selectedStoreIds.join(',') },
                              success: function (response) {
                                  console.log('AJAX Response:', response);
                                  updateCategories(response.categories, selectedStoreIds);
                                  updateSubCategories(response.subcategories, selectedStoreIds);
                              },
                              error: function (xhr, status, error) {
                                  console.error('Error sending request:', error);
                              }
                          });
                      } else {
                          updateCategories([]);
                          updateSubCategories([]);
                      }
                  });
              });
      
              storeCheckboxes.forEach(function (checkbox) {
                  if (checkbox.checked) {
                      checkbox.dispatchEvent(new Event('change'));
                  }
              });
          });
      
          function updateCategories(categories, selectedStoreIds = []) {
              console.log('Updating Categories:', categories, selectedStoreIds);
              const categoriesDivs = document.querySelectorAll('[id^=categories]');
              categoriesDivs.forEach(div => div.innerHTML = '');
      
              const sub_subcategoryDataElement = document.getElementById('sub_subcategory-data');
              const sub_subcategory = JSON.parse(sub_subcategoryDataElement.getAttribute('data-sub_subcategory'));
              const preCheckedCategoryIds = sub_subcategory.catId.split(',');
      
              selectedStoreIds.forEach(storeId => {
                  const categoriesDiv = document.querySelector(`#categories${storeId}`);
                  if (categoriesDiv) {
                      categories.forEach(category => {
                          if (category.storeId.split(',').includes(storeId)) {
                              const input = createCheckbox('catId[]', category.id, `category${category.id}`, category.Name, preCheckedCategoryIds);
                              categoriesDiv.appendChild(input);
                          }
                      });
                  }
              });
          }
      
          function updateSubCategories(subcategories, selectedStoreIds) {
              selectedStoreIds.forEach(storeId => {
                  const subcategoriesDiv = document.querySelector(`#subcategories${storeId}`);
                  subcategoriesDiv.innerHTML = '';
      
                  const sub_subcategoryDataElement = document.getElementById('sub_subcategory-data');
                  const sub_subcategory = JSON.parse(sub_subcategoryDataElement.getAttribute('data-sub_subcategory'));
                  const preCheckedsub_subcategoryIds = sub_subcategory.subcatId.split(',');
      
                  subcategories.forEach(sub_subcategory => {
                      const storeIdsArray = sub_subcategory.storeId.split(',').map(id => id.trim());
                      console.log("sub_subcategory.storeId:",storeIdsArray)
                      if (storeIdsArray.includes(storeId)) {
                          const input = createCheckbox('subcatId[]', sub_subcategory.id, `sub_subcategory${sub_subcategory.id}`, sub_subcategory.SubCatName, preCheckedsub_subcategoryIds);
                          subcategoriesDiv.appendChild(input);
                      }
                  });
              });
          }
      
          function createCheckbox(name, value, id, labelName, preCheckedIds) {
              const input = document.createElement('input');
              input.type = 'checkbox';
              input.name = name;
              input.value = value;
              input.id = category.id;
              input.checked = preCheckedIds.includes(String(value));
      
              const label = document.createElement('label');
              label.htmlFor = id;
              label.textContent = labelName;
      
              const div = document.createElement('div');
              div.className = 'form-check';
              div.appendChild(input);
              div.appendChild(label);
      
              return div;
          }
      
          $(document).ready(function () {
              $('#updatesub_subcategory-form').submit(function (event) {
                  event.preventDefault();
                  $.ajax({
                      type: 'POST',
                      url: '/updatesub_subcategory',
                      data: $(this).serialize(),
                      success: function (response) {
                          console.log('Form Submission Success:', response);
                          $('#sub_subcategory-message').removeClass('error-box').addClass('success-box').text(response.message);
                          setTimeout(function () {
                              window.location.href = '/showsub_subcategory';
                          }, 2000);
                      },
                      error: function (xhr, status, error) {
                          console.error('Form Submission Error:', error);
                          $('#sub_subcategory-message').removeClass('success-box').addClass('error-box').text(xhr.responseJSON.error);
                      }
                  });
              });
          });
      </script>
      
</body>

</html>