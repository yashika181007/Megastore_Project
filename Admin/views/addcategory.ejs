  <style>
    .success-box {
      background-color: #dff0d8;
      border-color: #d6e9c6;
      color: #3c763d;
    }

    .error-box {
      background-color: #f8d7da;
      border-color: #f5c6cb;
      color: #721c24;
    }

    .message-box {
      padding: 10px;
      margin-top: 10px;
      border-radius: 5px;
    }
  </style>
</head>

<body>
  <%- include('./header.ejs') %>
    <%- include('./sidebar.ejs') %>
      <main id="main" class="main">
        <div class="pagetitle">
          <h1>Categories</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item active">Add Category</li>
            </ol>
          </nav>
        </div><!-- End Page Title -->
        <div>
        </div>
        <section class="section dashboard">
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <div id="store" class="message-box"></div>
                  <h5 class="card-title">Add Category</h5>
                  <form action="/addcategory" id="addcategory" method="POST" class="row g-3 needs-validation"
                    novalidate>
                    <!-- Update action to POST -->
                    <div class="col-12 ">
                      <label for="inputName" class="form-label">Name</label>
                      <input type="text" class="form-control" id="inputName" name="Name" required>
                      <div class="valid-feedback ">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please enter a valid category name.
                      </div>
                    </div>
                    <div class="col-12">
                      <label for="inputDescription" class="form-label">Description</label>
                      <textarea class="form-control" id="inputDescription" name="Description" required></textarea>
                      <div class="valid-feedback ">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please enter a valid description.
                      </div>
                    </div>
                    <div class="col-12">
                      <label for="inputPageTitle" class="form-label">Page Title</label>
                      <input type="text" class="form-control" id="inputPageTitle" name="PageTitle" required>
                      <div class="valid-feedback ">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please enter a valid page title.
                      </div>
                    </div>
                    <div class="col-12">
                      <label for="inputMetaKeywords" class="form-label">Meta Keywords</label>
                      <input type="text" class="form-control" id="inputMetaKeywords" name="MetaKeywords" required>
                      <div class="valid-feedback ">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please enter a valid meta keywords.
                      </div>
                    </div>
                    <div class="col-12">
                      <label for="inputMetaDescription" class="form-label">Meta Description</label>
                      <textarea class="form-control" id="inputMetaDescription" name="MetaDescription"
                        required></textarea>
                      <div class="valid-feedback ">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please enter a valid meta description.
                      </div>
                    </div>
                    <!-- Inside the form -->
                    <div class="col-12">
                      <label for="stores" class="form-label">Stores</label>
                      <% stores.forEach((store, index)=> { %>
                        <div class="form-check">
                          <input class="form-check-input" id="stores" type="checkbox" name="storeId[]"
                            value="<%= store.id %>" id="gridCheck<%= index %>" required>
                          <label class="form-check-label" for="gridCheck<%= index %>">
                            <%= store.store_name %>
                          </label>
                        </div>
                        <% }); %>
                    </div>
                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">Submit</button>
                      <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main><!-- End #main -->
      <!-- ======= Footer ======= -->
      <%- include('./footer.ejs') %>
        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>
        <!-- Vendor JS Files -->
        <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="assets/vendor/chart.js/chart.umd.js"></script>
        <script src="assets/vendor/echarts/echarts.min.js"></script>
        <script src="assets/vendor/quill/quill.min.js"></script>
        <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="assets/vendor/tinymce/tinymce.min.js"></script>
        <script src="assets/vendor/php-email-form/validate.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
          $(document).ready(function () {
            $('#addcategory').submit(function (event) {
              event.preventDefault();
              $.ajax({
                type: 'POST',
                url: '/addcategory',
                data: $(this).serialize(),
                success: function (response) {
                  $('#store').removeClass('error-box').addClass('success-box').text(response.message);
                  setTimeout(function () {
                    window.location.href = '/showcategory';
                  }, 2000);
                },
                error: function (xhr, status, error) {
                  $('#store').removeClass('success-box').addClass('error-box').text(xhr.responseJSON.error);
                }
              });
            });
          });
        </script>
</body>

</html>